@model workshop.Entities.User
@{
}
<style>
    body {
        background: #74ebd5;
        background: -webkit-linear-gradient(to right, #74ebd5, #ACB6E5);
        background: linear-gradient(to right, #74ebd5, #ACB6E5);
        min-height: 100vh;
    }

</style>
<div class="container d-flex justify-content-center align-items-center p-2 rounded-3">

    <div class="card p-3 rounded-3">

        <div class="text-center">

            <div class="profile">
                <img src="/6a175f7f-661b-48e1-91e8-949f64c0ce4d.png" class="rounded-circle" width="80">
                <h4 class="mb-0 ">@Model.Name</h4>
            </div>

        </div>

        <div class="row">

        </div>
        <div class="mt-5">
            <h6 class="p-2">UserID: @Model.Id</h6>
            <div class="d-flex justify-content-between align-items-center mt-4 px-4">

                <div>
                    <h6 class="mb-0">Email : @Model.Email</h6>
                    <h6 class="mb-0">Phone : @Model.Phone</h6>
                </div>
            </div>

        </div>

    </div>
    <a asp-controller="Profile" asp-action="EditProfile">Edit Profile</a>

</div>