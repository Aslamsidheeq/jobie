@using workshop.Entities
@model List<Job>
@{
}
<style>
    body {
        background: #74ebd5;
        background: -webkit-linear-gradient(to right, #74ebd5, #ACB6E5);
        background: linear-gradient(to right, #74ebd5, #ACB6E5);
        min-height: 100vh;
    }
</style>
<div class="container ">
        <p><a href="/Profile/viewProfile">Profile</a></p>
<table class="table table-striped table-white text-dark shadow-lg">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var jo in Model)
        {
            <tr>
                <td>@jo.Id</td>
                <td>@jo.Title</td>
                    <td>
                        <a  asp-route-id="@jo.Id">Edit</a>
                    </td>
                    <td>
                        <form >
                            <input type="hidden" name="" value="@jo.Id" />
                            <button class="btn btn-primary">Delete</button>
                        </form>
                    </td>
            </tr>
        }
    </tbody>
</table>
</div>